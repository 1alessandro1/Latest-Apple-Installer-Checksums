{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "_comment": "Indented PEP8ish to improve (read|edit)abity.",
    "title": "File Checksums",
    "description": "Checksums for files (md5, sha1, sha256, etc).",
    "self": {"name": "file_checksums", "format": "jsonschema", "vendor": "net.brainsoup",
             "version": "0-1-0"},
    "type": "array",
    "items": [
        {
            "type": "object",
            "title": "File Checksum",
            "properties": {
                "filename": {"type": "string", "minLength": 1},
                "md5": {"type": "string", "pattern": "^[0-9A-Za-z]{32}$"},
                "sha1": {"type": "string", "pattern": "^[0-9A-Za-z]{40}$"},
                "sha224": {"type": "string", "pattern": "^[0-9A-Za-z]{56}$"},
                "sha256": {"type": "string", "pattern": "^[0-9A-Za-z]{64}$"},
                "sha384": {"type": "string", "pattern": "^[0-9A-Za-z]{96}$"},
                "sha512": {"type": "string", "pattern": "^[0-9A-Za-z]{128}$"}
            },
            "minProperties": 2,
            "required": ["filename"]
        }
    ]
}
